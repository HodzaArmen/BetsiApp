@page
@model IndexModel
@{
    ViewData["Title"] = "Betsi - Tekme za Stave";
}

<div class="text-center">
    <h1 class="display-4">⚽ Prihajajoče Tekme ⚽</h1>
</div>

@if (Model.Matches.Any())
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Datum/Ura</th>
                <th>Status</th>
                <th>Domača Ekipa</th>
                <th>Gostujoča Ekipa</th>
                <th>Rezultat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var match in Model.Matches)
            {
                <tr>
                    <td>@match.UtcDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @match.Status 
                    </td>
                    <td>
                        <strong>@match.HomeTeam.Name</strong>
                    </td>
                    <td>
                        <strong>@match.AwayTeam.Name</strong>
                    </td>
                    <td>
                        @{
                            // Preverimo, ali obstaja rezultat
                            if (match.Score.FullTime.Home.HasValue && match.Score.FullTime.Away.HasValue)
                            {
                                <span>@match.Score.FullTime.Home : @match.Score.FullTime.Away</span>
                            }
                            else
                            {
                                <span>(Tekma še ni končana)</span>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Trenutno ni podatkov o tekmah. Preverite API ključ, kodo lige ("CL") in ali je API dosegljiv.
    </div>
}