@page
@model BetsiApp.Pages.MyBetsModel
@{
    ViewData["Title"] = "My Bets";
}

<div class="container mt-3">
    <h1 class="text-center mt-6 fw-semibold mb-3">Moje stave</h1>

    <h2>Obvestila</h2>

    @if (!Model.Notifications.Any())
    {
        <p class="text-muted fst-italic mb-5">
            Trenutno nimate obvestil.
        </p>
    }
    else
    {
        <ul class="list-group mb-3">
            @foreach (var notification in Model.Notifications.Take(10))
            {
                <li class="list-group-item d-flex justify-content-between align-items-center @(notification.IsRead ? "" : "list-group-item-warning")">
                    <span>
                        <strong>@notification.CreatedAt.ToLocalTime():</strong> @notification.Message
                    </span>

                    @if (!notification.IsRead)
                    {
                        <form method="post" asp-page-handler="MarkRead" asp-route-id="@notification.Id">
                            <button class="btn btn-sm btn-outline-primary">
                                Oznaƒçi kot prebrano
                            </button>
                        </form>
                    }
                </li>
            }
        </ul>

        <form method="post" asp-page-handler="MarkAllRead" class="mb-4">
            <button class="btn btn-sm btn-success">
                Oznaƒçi vsa kot prebrana
            </button>
        </form>
    }

    <h2 class="fw-semibold mb-3">Vplaƒçani listki</h2>

    @if (!Model.BetSlips.Any())
    {
        <div class="alert alert-info">
            Nimate ≈°e nobene oddane stave. <a asp-page="/Index">Oddajte svojo prvo stavo tukaj!</a>
        </div>
    }
    else
    {
        @foreach (var slip in Model.BetSlips)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center @(slip.Status == "WON" ? "bg-success text-white" : slip.Status == "LOST" ? "bg-danger text-white" : "bg-light")">
                    <span> 
                        Trenutek vplaƒçila listka: üìÖ @slip.PlacementTime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                    </span>
                    <span class="badge @(slip.Status == "OPEN" ? "bg-warning text-dark" : "bg-white text-dark")">
                        @slip.Status
                    </span>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless">
                        <thead>
                            <tr>
                                <th style="width:70%;">Tekma</th>
                                <th class="text-end" style="width:15%;">Izid</th>
                                <th class="text-end" style="width:15%;">Kvota</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in slip.BetItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge @(item.Sport == "Football" ? "bg-primary" : "bg-warning text-dark")">
                                                @(item.Sport == "Football" ? "‚öΩ Nogomet" : "üèÄ Ko≈°arka")
                                            </span>
                                            <span>@item.MatchDescription</span>
                                        </div>
                                    </td>

                                    <td class="text-end">
                                        <span class="badge bg-success text-white">@item.SelectedOutcome</span>
                                    </td>

                                    <td class="text-end">
                                        @item.PlacedOdd.ToString("F2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <span>Vlo≈æek: <strong>@slip.Stake.ToString("F2") ‚Ç¨</strong></span>
                    <span>Skupna kvota: <strong>@slip.TotalOdd.ToString("F2")</strong></span>
                    <span>Mo≈æni dobitek: <strong class="text-primary">@((slip.Stake * slip.TotalOdd).ToString("F2")) ‚Ç¨</strong></span>
                </div>
            </div>
        }
    }
</div>