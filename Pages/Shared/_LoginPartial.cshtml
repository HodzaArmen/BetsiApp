@using Microsoft.AspNetCore.Identity
@using BetsiApp.Models 

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var balance = user?.Balance ?? 0.00m; 

    // --- SPUSTNI MENI ZA STANJE (BALANCE DROPDOWN) ---
    <li class="nav-item dropdown">
        <a class="nav-link text-dark dropdown-toggle" href="#" id="balanceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="fw-bold">Balance:</span> @balance.ToString("F2") â‚¬
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="balanceDropdown">
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/Transactions/Deposit">Deposit</a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/Transactions/Withdraw">Withdraw</a>
            </li>
        </ul>
    </li>
    // ----------------------------------------------------
    
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(user?.UserName)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    // ... (Koda za neprijavljenega uporabnika ostane enaka)
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>