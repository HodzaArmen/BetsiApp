@using Microsoft.AspNetCore.Identity
@using BetsiApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var balance = user?.Balance ?? 0.00m;

    <li class="nav-item position-relative">
        <a class="nav-link text-dark">
            <span class="fw-bold">Stanje:</span> @balance.ToString("F2") â‚¬
        </a>

        @if (TempData["ToastMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
        {
            <div class="betsi-bubble" id="betsiBubble">@msg</div>
        }
    </li>

    <li class="nav-item">
        <a id="manage"
           class="nav-link text-dark"
           asp-area="Identity"
           asp-page="/Account/Manage/Index"
           title="Manage">
            Pozdravljen, @User.Identity?.Name?.Split('@')[0]
        </a>
    </li>

    <li class="nav-item">
        <form id="logoutForm"
              class="form-inline"
              asp-area="Identity"
              asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 fw-bold">
                Odjava
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
